#: import get_color_from_hex kivy.utils.get_color_from_hex
#:import win kivy.core.window

<PictureViewer>
    orientation: 'vertical'

    Label:
        text: "Folders Image List"
        size_hint_y: .2

    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            orientation: 'vertical'
            size_hint: .2, 1

            FileChooserListView:
                dirselect: True
                show_hidden: True
                filters: ['*.jpeg', '*.jpg', '*.png']
                on_submit: root.select_source(self.selection)
                root_path: "/Users/denizci"
                path: "/Users/denizci"

        BoxLayout:
            orientation: 'vertical'
            size_hint: .8, 1

            Image:
                size_hint: 1, 1
                on_size: self.center = win.Window.center
                source: ''

            Label:
                size_hint: 1, None
                height: '25px'
                text: ''
